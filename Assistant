<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatGPT Assistant</title>
</head>
<body>
    <h1>ChatGPT Assistant</h1>
    <textarea id="question" rows="4" cols="50" placeholder="Type your question here..."></textarea><br>
    <button onclick="getAnswer()">Get Answer</button>
    <h2>Response:</h2>
    <p id="response"></p>

    <script>
        async function getAnswer() {
            const question = document.getElementById('question').value;S
            const responseElement = document.getElementById('response');

            const response = await fetch('https://api.openai.com/v1/engines/davinci-codex/completions', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': 'Bearer YOUR_API_KEY'
                },
                body: JSON.stringify({
                    prompt: question,
                    max_tokens: 150
                })
            });    

            const data = await response.json();
            responseElement.textContent = data.choices[0].text;
        }
    </script>
</body>
</html>
